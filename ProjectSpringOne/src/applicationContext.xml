<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.1.xsd ">
	
	<!-- se crea la dependencia antes del bean a llamar -->
	<bean id="miInforme" class="es.pildoras.ioc.Informe" ></bean>
	
	<bean id="empleado" class="es.pildoras.ioc.DirectorEmpleado">
		
		<constructor-arg ref="miInforme"></constructor-arg>
		
	</bean>
	
	<!-- Genera D.I. con seter, se pone en el name properties el setInformeNuevo pero en min informeNuevo -->
	<bean id="miSecretarioEmp" class="es.pildoras.ioc.SecretarioEmpleado">
		<property name="informeNuevo" ref="miInforme"></property>
	</bean>

</beans>